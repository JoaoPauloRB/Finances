@using Web.Components.IncomeExpense
@using Web.Components.Modal;

@inherits BlazorStateComponent

<Modal Title="@(Type == FinancialTransactionType.Credit ? "Receita" : "Despesa")" Visible="@_visible">
  <IncomeExpense CancelCallback="@modal.Close" SubmitCallback="@modal.Close" Type="@Type"/>
</Modal>

@code {
  private bool _visible;
  FinancialTransactionType Type;
  public Modal modal = new Modal();
  public void Open(FinancialTransactionType type) {
    Type = type;
    StateHasChanged();
    modal.Show();
  }

}